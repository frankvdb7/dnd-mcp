{
  "name": "@frankvdb/dnd-mcp",
  "version": "1.0.0",
  "description": "MCP server for D&D 5E content using Open5e API - Complete migration from WikiDot scraping",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "dev-legacy": "tsx watch src/scraper.ts",
    "start": "node dist/index.js",
    "start-legacy": "node dist/scraper.js",
    "lint": "eslint src --ext .ts",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "axios": "^1.11.0",
    "cheerio": "^1.0.0-rc.12",
    "fuse.js": "^7.1.0",
    "node-cache": "^5.1.2"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^8.0.0",
    "jest": "^30.0.5",
    "tsx": "^4.0.0",
    "typescript": "^5.9.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frankvdb7/dnd-mcp.git"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "mcp",
    "dnd",
    "dungeons-dragons",
    "wiki",
    "server"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "",
  "license": "MIT"
}
